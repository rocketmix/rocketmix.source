<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>rocketmix-parent</artifactId>
    <groupId>io.github.rocketmix</groupId>
    <version>1.0.27-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>rocketmix-all-in-one-server</artifactId>
  <packaging>war</packaging>
  <name>RocketMiX bundle server</name>
  <description>Bundle server with all routing and management features</description>
  <url>https://github.com/rocketmix/rocketmix.source</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/target/resources</outputDirectory>
              <resources>
                <resource>
                  <directory>${project.basedir}/../rocketmix-routing-server/src/main/resources</directory>
                  <excludes>
                    <exclude>application.yml</exclude>
                    <exclude>application.properties</exclude>
                  </excludes>
                </resource>
                <resource>
                  <directory>${project.basedir}/../rocketmix-management-server/src/main/resources</directory>
                  <excludes>
                    <exclude>application.yml</exclude>
                    <exclude>application.properties</exclude>
                  </excludes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <includes>
                    <include>application.yml</include>
                    <include>application.properties</include>
                  </includes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <resource>application.yml</resource>
                </transformer>
                <transformer>
                  <resource>application.properties</resource>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>deploy</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <serverId>sourceforge</serverId>
              <skip>false</skip>
              <target>
                <property />
                <echo />
                <copy />
                <scp>
                  <fileset>
                    <include />
                  </fileset>
                </scp>
              </target>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant-jsch</artifactId>
            <version>1.8.4</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>io.github.rocketmix</groupId>
      <artifactId>rocketmix-routing-server</artifactId>
      <version>1.0.27-SNAPSHOT</version>
      <classifier>classes</classifier>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>io.github.rocketmix</groupId>
      <artifactId>rocketmix-management-server</artifactId>
      <version>1.0.27-SNAPSHOT</version>
      <classifier>classes</classifier>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax.xml.ws</groupId>
      <artifactId>jaxws-api</artifactId>
      <version>2.3.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax.activation</groupId>
      <artifactId>javax.activation-api</artifactId>
      <version>1.2.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>

