[Unit]
Description=rocketmix-routing-server
Requires=network.target
After=network.target

# If needed, enable this option to reboot immediately in process failure
# OnFailure=systemd-reboot.service

[Service]
Type=simple
User={{username}}
Group={{usergroup}}
ExecStart={{installpath}}/rocketmix-routing-server.war
SuccessExitStatus=143
RemainAfterExit=no
Restart=on-failure
RestartSec=10s
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
